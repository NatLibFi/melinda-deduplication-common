{
  "name": "@natlibfi/melinda-deduplication-common",
  "description": "Shared modules for microservices of Melinda deduplication system",
  "homepage": "https://github.com/natlibfi/melinda-deduplication-common-melinda",
  "bugs": {
    "url": "https://github.com/natlibfi/melinda-deduplication-common-melinda/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:natlibfi/melinda-deduplication-common-melinda.git"
  },
  "license": "LGPL-3.0+",
  "version": "2.0.2",
  "main": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "lint": "eslint --fix src",
    "clean:build": "rimraf dist",
    "build": "npm run clean:build && babel src -d dist",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "NODE_ENV=test mocha --compilers js:babel-register src/**/*.spec.js",
    "test:watch": "NODE_ENV=test mocha --compilers js:babel-register src/**/*.spec.js -w",
    "publish-to-npm": "npm install && npm test && npm publish --access=public"
  },
  "dependencies": {
    "@natlibfi/marc-record": "^2.1.0",
    "@natlibfi/marc-record-serializers": "^1.2.0",
    "@natlibfi/json-similarity": "^1.0.0",
    "@natlibfi/marc-record-merge": "^5.0.0",
    "@natlibfi/melinda-api-client": "^1.0.0",
    "debug": "^3.1.0",
    "es6-promisify": "^5.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node-fetch": "^2.2.0",
    "node-uuid": "^1.4.8",
    "querystring": "0.x.x",
    "roman-numerals": "0.x.x",
    "sprintf": "0.x.x",
    "synaptic": "^1.1.1",
    "unorm": "^1.4.1",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "wuzzy": "0.x.x",
    "xml2js": "0.x.x"
  },
  "peerDependencies": {
    "@natlibfi/melinda-deduplication-datastore": "^1.0.0",
    "@natlibfi/melinda-deduplication-listener": "^1.0.0",
    "@natlibfi/melinda-deduplication-merge": "^1.0.0",
    "@natlibfi/melinda-deduplication-validate": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "0.x.x",
    "cross-env": "^5.1.1",
    "eslint": "^5.2.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.13.0",
    "events": "^3.0.0",
    "istanbul": "0.x.x",
    "mocha": "^5.2.0",
    "npm-check": "^5.7.1",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "import/no-unresolved": 2,
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "babel": {
    "presets": [
      "flow",
      [
        "env",
        {
          "targets": {
            "node": "7"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ]
      }
    }
  }
}
